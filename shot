#!/usr/bin/fish
# Script to take screenshots on Wayland

set window (slurp)
set name $(echo | tofi -c ~/.config/tofi/nomatch-theme --prompt-text "Filename: ")
switch $name
case ""
grim -g "$window"
case "*"
grim -g "$window" - > ~/Pictures/$name.png
dunstify "ï€¾  Screnshot saved in" " ~/Pictures/$name.png"
end
